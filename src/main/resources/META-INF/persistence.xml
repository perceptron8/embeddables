<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">
	<persistence-unit name="jpa">
		<class>jpa.IdentityDocument</class>
		<class>jpa.IdentityDocumentUsage</class>
		<class>jpa.LocalDateRange</class>
		<class>jpa.Person</class>
		<properties>
			<property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:" />
			<property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create" />
		</properties>
	</persistence-unit>
</persistence>
